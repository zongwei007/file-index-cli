{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Deno (Allow All)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--config",
        "./tsconfig.json",
        "--inspect-brk",
        "--unstable",
        "-A",
        "mod.ts",
        "add",
        "."
      ],
      "attachSimplePort": 9229
    }
  ]
}
